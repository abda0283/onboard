
<%= simple_form_for @user do |form| %>


<%= form.input :name %>

<%= form.input :username %>

<%= form.input :email %>


<%= form.input :password %>


<%= form.input :password_confirmation %>


<%= form.button :submit, "Sign up" %>


<% end %>

<div class="social">

<strong> Log in with ... </strong>


	<%= link_to "facebook", "/auth/facebook" %>
	
	<%= link_to "twitter", "/auth/twitter" %>


	<%= link_to "LinkedIn", "/auth/LinkedIn" %>




</div>