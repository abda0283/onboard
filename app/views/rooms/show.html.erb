<h1>Rooms#show</h1>
<!-- <p>Find me in app/views/rooms/show.html.erb</p>
 -->

<h2><%= @room.title%></h2>

<%= image_tag @room.image(:large) %>



<p><%= @room.address%></p>

<p><%= @room.latitude%> <%=@room.longitude %></p>


<% if current_user.present? %>
<!-- check if users is logged in, only show the below if they are -->
<!-- if you are logged in, it will show book room -->

<div class="actions">

	<%= link_to "Book Room", new_room_order_path(@room), class: "button"%>

		<% if current_user == @room.user %>
		<%= link_to "edit", edit_room_path(@room), class: "button" %>

		<%= link_to "delete", room_path(@room), method: :delete, class: "button", confirm: "are you sure?"%>
	
		<% end %>

<!-- you wont see the room if you dont own it,  -->

</div>

<% end %>


